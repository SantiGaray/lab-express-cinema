<div class="moviedetailbox">
    <div>
        <img src={{image}} alt={{title}}>
    </div>
    <div class="moviedetail">
        <a href="/movies">Go Back</a>
        <h2>{{title}}</h2>
        <h3>Director: {{director}}</h3>
        <h4>Stars:</h4>
        {{#each movie}}
            <ul>
                <li>{{stars}}</li>
            </ul>
        {{/each}}
        <p>{{description}}</p>
        <p>
            {{#each showtimes}}
              <span>{{this}} |</span> 
            {{/each}}
        </p> 
    </div>
</div>